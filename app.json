{
  "expo": {
    "name": "FastDiet",
    "slug": "fastdiet-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fastdiet",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fastdiet.app",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "storage.googleapis.com": {
              "NSIncludesSubdomains": true,
              "NSThirdPartyExceptionRequiresForwardSecrecy": true,
              "NSExceptionAllowsInsecureHTTPLoads": false
            },
            "accounts.google.com": {
              "NSIncludesSubdomains": true,
              "NSThirdPartyExceptionRequiresForwardSecrecy": true,
              "NSExceptionAllowsInsecureHTTPLoads": false
            }
          }
        },
        "LSApplicationQueriesSchemes": ["google", "com.googleusercontent.apps.1029285084877-up0oqd75c8jofll6he0vs10959v2r4ub"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.fastdiet.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-localization",
      "expo-web-browser",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.1029285084877-up0oqd75c8jofll6he0vs10959v2r4ub"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "La app necesita acceder a tus fotos para que puedas añadir imágenes a tus recetas.",
          "cameraPermission": "La app necesita acceder a la cámara para que puedas tomar fotos para tus recetas."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "API_URL_WEB": "http://localhost:13000",
      "API_URL_ANDROID": "http://192.168.1.111:13000",
      "API_URL_IOS": "http://192.168.1.111:13000",
      "eas": {
        "projectId": "3380a3af-405d-47f2-ab7f-cce21a09e1d6"
      }
    }
  }
}
